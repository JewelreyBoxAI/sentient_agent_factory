# ===== PROTOTYPE CONFIGURATION (SQLite - FREE!) =====
# For development/prototype - no database setup needed!
DEBUG=true

# ===== PRODUCTION CONFIGURATION (PostgreSQL) =====
# Uncomment these for production deployment
# DATABASE_URL="postgresql://user:password@localhost:5432/sentient_ai"
# DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/sentient_ai"

# OpenAI (REQUIRED)
OPENAI_API_KEY="your_openai_api_key_here"

# Authentication (Optional for prototype)
CLERK_SECRET_KEY="your_clerk_secret_key"
CLERK_PUBLISHABLE_KEY="your_clerk_publishable_key"
JWT_SECRET="your_jwt_secret_here"

# Redis (Optional - using in-memory for prototype)
# REDIS_URL="redis://localhost:6379"

# Stripe (Optional for prototype)
STRIPE_API_KEY="your_stripe_api_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# API Configuration
API_HOST="127.0.0.1"
API_PORT=8000

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Memory & Vector Store
FAISS_INDEX_PATH="./data/faiss_index"
MAX_TOKENS_LIMIT=4000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL="INFO" 